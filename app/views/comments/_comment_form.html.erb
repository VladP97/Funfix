<%= form_for comment, remote: true, authenticity_token: true do |f| %>
  <%= f.label t('comment.text_area') %>
  <%= f.text_area :comment, class: "form-control", data: {textarea: "comment"} %>

  <%= f.hidden_field :fanfic_id, value: fanfic.id %>
  <%= f.submit t('comment.submit'), class: "btn btn-primary", data: {send: "message"} %>
<% end %>